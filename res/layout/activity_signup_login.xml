<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/citybw"
    android:gravity="center_vertical"
    android:paddingLeft="30dp"
    android:paddingRight="30sp" >
    
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#AAFFFFFF"
        android:orientation="vertical"
        android:paddingBottom="20sp"
        android:paddingLeft="20sp"
        android:paddingRight="20sp"
        android:paddingTop="20sp" >
    
	    <TextView 
	        android:id="@+id/pseudo"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/enter_pseudo"
	        android:textColor="@color/normal_start"
	        android:layout_alignParentLeft="true"
	        />
	    
	    <EditText
	        android:id="@+id/enter_pseudo"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@id/pseudo"
	        android:layout_marginTop="10sp"
	        android:inputType="textPersonName" />
	    
	    <TextView 
	        android:id="@+id/password"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/enter_password"
	        android:textColor="@color/normal_start"
	        android:layout_below="@id/enter_pseudo"
	        android:layout_alignParentLeft="true"
	        android:layout_marginTop="10sp"
	        />
	    
	    <EditText
	        android:inputType="textPassword"
	        android:id="@+id/enter_password"
	        android:layout_below="@id/password" 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_marginTop="10sp"
	        />
	    
	    <Button
	        android:id="@+id/done_button"
	        style="@style/SingleGradient"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_below="@id/enter_password"
	        android:layout_marginTop="10sp"
	        android:onClick="GoToMain"
	        android:text="@string/done" />
 
	</RelativeLayout>
	
</RelativeLayout>
